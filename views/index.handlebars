<div id="page">

  <div id="top">
    <h1>EAT-DA-BURGER!</h1>
    <img id="burger-img" src="burger.png" height="350rem" alt="BURGER IMAGE" />
  </div>

  <div>
    <div id="menu">

      <div id="whole">
        <h2>Fresh Burgers</h2>
        <div id="whole-list">
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
          {{/unless}}
          {{/each}}
        </div>
      </div>

      <div id="devoured">
        <h2>Devoured Burgers</h2>
        <div id="dev-list">
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devour=false}}
          {{/if}}
          {{/each}}
        </div>
      </div>

    </div>
  </div>

  <div id="add-burger">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group" style="display: none">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1"> Devoured!<br>
        <input type="radio" name="devoured" value="0" checked> Whole
      </div>

      <button type="submit" id="add-button">Add Burger</button>
    </form>
  </div>

</div>